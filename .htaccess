# Force HTTPS redirect
RewriteEngine On
Options -MultiViews
RewriteBase /TutorMind/

RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Custom Routes
RewriteRule ^chat/([0-9]+)/?$ tutor_mysql.php?conversation_id=$1 [L,NC]
RewriteRule ^chat/?$ tutor_mysql.php [L,NC]
RewriteRule ^login/?$ login.html [L,NC]
RewriteRule ^register/?$ register.html [L,NC]
RewriteRule ^index/?$ index.html [L,NC]

# Handle extensionless PHP files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Handle extensionless HTML files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Additional security headers
<IfModule mod_headers.c>
    # Strict Transport Security (HSTS) - Force HTTPS for 1 year
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
